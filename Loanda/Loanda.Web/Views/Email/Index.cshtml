@model IEnumerable<Loanda.Web.Models.Email.EmailViewModel>
@{
    ViewData["Title"] = "Received Emails";
}

<h1>Emails</h1>

<div class="container-fluid">

    <form asp-controller="Email" asp-action="Index" method="post">

        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateReceived)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SenderEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SenderName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="myFunction('@item.Id')">
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateReceived)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SenderEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SenderName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDeleted)
                            </td>
                        </tr>
                        <div class="modal" id="my_modal">
                            <div class="modal-dialog modal-lg">


                                <div id="modalSubscriptionForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="bd-example-modal-lg modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header text-center">
                                                <h4 class="modal-title w-100 font-weight-bold"><i class="fa fa-user-circle-o" aria-hidden="true"></i> Manage User</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body mx-3">
                                                <form asp-controller="Email" asp-action="Details" method="post">
                                                    THIS IS THE MODAL BODY
                                                    @*@Html.DisplayNameFor(model => @Model.Subject)
                                <p> @Html.DisplayFor(model => @Model.Subject)</p>*@

                                                    <p class="col-sm-2">
                                                        @Html.DisplayNameFor(modelItem => item.Subject)
                                                    </p>
                                                    <p class="col-sm-10">
                                                        @Html.DisplayFor(modelItem => item.Subject)
                                                    </p>

                                                    <div>
                                                        <div>
                                                            <a class="btn btn-primary" title="Mark email as invalid" asp-controller="Email">Invalid</a> |
                                                            <a class="btn btn-primary" title="Create new loan application" asp-controller="Email" asp-action="Details" asp-route-id="@item.Id">New</a>

                                                        </div>
                                                    </div>


                                                    <div class="modal-footer d-flex justify-content-center">

                                                        <button type="submit" class="btn btn-indigo">
                                                            <svg id="i-close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                                                <path d="M2 30 L30 2 M30 30 L2 2" />
                                                            </svg>
                                                        </button>
                                                        <button type="submit" class="btn btn-indigo"> Save Changes </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                @*<partial name="_EmailDetail" model="null" />*@
                            </div>
                        </div>
                    }
                   
                </tbody>
            </table>
        </div>

        <thead>

            <tr>
            </tr>
        </thead>
        <tbody>

            @*<div class="row">
                    <div class="col-12">
                        <table class="table">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>

                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>*@
        </tbody>


    </form>
</div>


@section Scripts {
    <script>
        var userId;
        function myFunction(id) {
            userId = id;
            $('#my_modal').modal('show');
        }
        $('#my_modal').on('show.bs.modal', function (e) {
            $(e.currentTarget).find('input[name="ID"]').val(userId);
        })
    </script>
    <script>
        $(document).on("click", "#contentPager a", function () {
            $.ajax({
                url: $(this).attr("href"),
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#content').html(result);
                }
            });
            return false;
        });
    </script>

}