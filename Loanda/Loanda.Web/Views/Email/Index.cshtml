@model IEnumerable<Loanda.Web.Models.Email.EmailViewModel>
@{
    ViewData["Title"] = "Received Emails";
}

<h1>Emails</h1>

<div class="container-fluid">

    <form asp-controller="Email" asp-action="Index" method="post">

        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateReceived)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SenderEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SenderName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalAttachments)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AttachmentsTotalSizeInMB)
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr onclick="myFunction('@item.Id')">
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateReceived)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SenderEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SenderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAttachments)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttachmentsTotalSizeInMB)
                        </td>
                        <td>
                            @if (item.TotalAttachments > 0)
                            {
                            <svg id="i-paperclip" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                <path d="M10 9 L10 24 C10 28 13 30 16 30 19 30 22 28 22 24 L22 6 C22 3 20 2 18 2 16 2 14 3 14 6 L14 23 C14 24 15 25 16 25 17 25 18 24 18 23 L18 9" />
                            </svg>
                            }
                        </td>
                    </tr>
                        <div class="modal @item.Id" id="my_modal">
                            <div class="modal-dialog modal-lg">


                                <div id="modalSubscriptionForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="bd-example-modal-lg modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header text-center">
                                                <h4 class="modal-title w-100 font-weight-bold"><i class="fa fa-user-circle-o" aria-hidden="true"></i>E-mail</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body mx-1">
                                                <form asp-controller="Email" asp-action="Details" method="post">
                                                    <h6 class="modal-title w-100 font-weight-bold">
                                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                                        @Html.DisplayNameFor(modelItem => item.Subject)
                                                    </h6>
                                                    <p class="col">
                                                        @Html.DisplayFor(modelItem => item.Subject)
                                                    </p>
                                                    <h6 class="modal-title w-100 font-weight-bold">
                                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                                        @Html.DisplayNameFor(modelItem => item.Body)
                                                    </h6>

                                                    <p class="col" style="overflow-wrap:break-word">
                                                        @Html.DisplayFor(modelItem => item.Body)
                                                    </p>

                                                    <div class="modal-footer d-flex justify-content-center">

                                                        <div>
                                                            <div>
                                                                <a class="btn btn-danger" title="Mark email as invalid" asp-controller="Email" asp-route-id="@item.Id">
                                                                    <svg id="i-ban" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                                                        <circle cx="16" cy="16" r="14" />
                                                                        <path d="M6 6 L26 26" />
                                                                    </svg>
                                                                </a>
                                                                <a class="btn btn-success" title="Mark email as valid" asp-controller="Email" asp-action="Details" asp-route-id="@item.Id">
                                                                    <svg id="i-checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                                                        <path d="M2 20 L12 28 30 4" />
                                                                    </svg>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </tbody>
            </table>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        var userId;
        function myFunction(id) {
            userId = id;
            $(`.${id}`).modal('show');
        }
        $('#my_modal').on('show.bs.modal', function (e) {
            $(e.currentTarget).find('input[name="ID"]').val(userId);
        })
    </script>
    <script>
        $(document).on("click", "#contentPager a", function () {
            $.ajax({
                url: $(this).attr("href"),
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#content').html(result);
                }
            });
            return false;
        });
    </script>
}