@section script{
    <script>
        function displayBusyIndicator() {
            $('.loading').show();
        }



    </script>

    <script>
        $(window).on('beforeunload', function () {
            displayBusyIndicator();
        });
    </script>

    <script>
        $(document).on('submit', 'form', function () {
            displayBusyIndicator();
        });
    </script>
}

