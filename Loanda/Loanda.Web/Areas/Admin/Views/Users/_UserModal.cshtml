@model UserModalModelView

<div id="modalSubscriptionForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold"><i class="fa fa-user-circle-o" aria-hidden="true"></i> Manage User</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <form asp-area="Admin" asp-controller="Users" asp-action="ChangeUserSettings" method="post">
                    <div class="hide-it">
                        <input asp-for="ID" class="hidden" name="ID" />
                        <span asp-validation-for="ID" class="text-danger"></span>
                    </div>

                    <div class="md-form mb-5">
                        <i class="fa fa-lock prefix grey-text"></i>
                        <input asp-for="NewPassword" type="text" class="form-control validate hidden">
                        <label asp-for="NewPassword" data-error="wrong" data-success="right" for="form3">New Password</label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="md-form mb-4">
                        <i class="fa fa-lock prefix grey-text"></i>
                        <input asp-for="ConfirmPassword" type="text" class="form-control validate hidden">
                        <label data-error="wrong" data-success="right" for="form3">New Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-flex flex-row bd-highlight mb-3" style="padding-left: 50px;">
                        <strong class="p-2 bd-highlight" style="margin-top: 6px">Admin:</strong>
                        <span class="p-2 bd-highlight">
                            <label class="bs-switch">
                                <input asp-for="IsAdmin" type="checkbox" checked>
                                <span class="slider round"></span>
                            </label>
                        </span>
                        <span style="width: 50px;"></span>
                        <strong class="p-2 bd-highlight" style="margin-top: 6px">Locked:</strong>
                        <span class="p-2 bd-highlight">
                            <label class="bs-switch">
                                <input asp-for="IsLocked" type="checkbox" checked>
                                <span class="slider round"></span>
                            </label>
                        </span>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-indigo"> Save Changes </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

